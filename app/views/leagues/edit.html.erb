<% provide(:title, "Edit #{@league.name}") %>
<h1>Update league info</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@league) do |f| %>
      <%= render 'shared/league_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :season %>
      <%= f.text_field :season, class: 'form-control' %>

      <%= f.label :num_teams %>
      <%= f.text_field :num_teams, class: 'form-control' %>

      <%= f.label :num_divisions %>
      <%= f.text_field :num_divisions, class: 'form-control' %>
      
      <br />
      
      <%= f.label :pa_yd %>
      <%= f.text_field :pa_yd, class: 'form-control' %>
      
      <%= f.label :pa_td %>
      <%= f.text_field :pa_td, class: 'form-control' %>
      
      <%= f.label :pa_int %>
      <%= f.text_field :pa_int, class: 'form-control' %>
      
      <%= f.label :ru_yd %>
      <%= f.text_field :ru_yd, class: 'form-control' %>
      
      <%= f.label :ru_td %>
      <%= f.text_field :ru_td, class: 'form-control' %>
      
      <%= f.label :re_yd %>
      <%= f.text_field :re_yd, class: 'form-control' %>
      
      <%= f.label :re_td %>
      <%= f.text_field :re_td, class: 'form-control' %>
      
      <%= f.label :rec %>
      <%= f.text_field :rec, class: 'form-control' %>
      
      <%= f.label :fum %>
      <%= f.text_field :fum, class: 'form-control' %>
      
      <%= f.label :fuml %>
      <%= f.text_field :fuml, class: 'form-control' %>
      
      <%= f.label :tpc %>
      <%= f.text_field :tpc, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
