<% provide(:title, @league.name) %>
<div class="row">
  <aside class="col-md-12 col-lg-12">
    <section class="league_info">
      <h1>
        <%= @league.name %>
      </h1>
      <h2>Season: <%= @league.season %></h2>
      <% if @team.is_commissioner? %>
      <div class=""><%= link_to "Edit", edit_league_path, class: "btn btn-primary" %></div>
      <% end %>
    </section>
    <section class="team_info">
      <% if @league.teams.count < @league.num_teams %>
        <%= link_to "Invite more teams", invite_url(:league_id => @league.id), class: "btn btn-primary" %>
      <% end %>
      <%= render "totals.html.erb" %>
    </section>
  </aside>
</div>
