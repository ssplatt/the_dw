<% provide(:title, "New Team") %>

<h1>Invite User to League</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:team, url: teams_path) do |f| %>
      
      <%= f.hidden_field :user_id, value: params[:user_id] %>
      
      <%= f.label :league_id %>
      <%= f.collection_select :league_id, @user.leagues, :id, :name, class: 'form-control' %>
      
      <%= f.submit "Invite User", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
