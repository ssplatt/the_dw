<% provide(:title, "New Team") %>

<h1>Invite team</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:team, url: teams_path) do |f| %>
      <% if @users %>
        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control typeahead' %>
      <% else %>
        <%= f.hidden_field :user_id, value: params[:user_id] %>
      <% end %>
      <% if @leagues %>
        <%= f.label :league_id %>
        <%= f.text_field :league_id, class: 'form-control typeahead' %>
      <% else %>
        <%= f.hidden_field :league_id, value: params[:league_id] %>
      <% end %>
      
      <%= f.submit "Invite User", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
