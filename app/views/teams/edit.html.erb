<% provide(:title, "Edit Team") %>

<h1>Edit team</h1>
<div class="row">
  <ul>
    <li>League: <%= @team.league.name %></li>
  </ul>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :logo %>
      <%= f.url_field :logo, class: 'form-control' %>
      
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
    
    <% if current_user.admin? || current_team? %>
    <%= link_to "delete", @team, method: :delete,
            data: { confirm: "You sure?" }, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
