<h1><%= @team.name %></h1>
<% if current_user.admin? || current_team?(@team) %>
<%= link_to "Edit", edit_team_path(@team), class: "btn btn-primary" %>
<% end %>
<img src="<%= @team.logo %>" />
<ul>
  <li>User: <%= link_to @team.user.name, @team.user %></li>
  <li>League: <%= link_to @team.league.name, @team.league %></li>
  <li>Division: <%= @team.division.name %></li>
  <% if @team.is_commissioner %>
  <li>Commissioner</li>
  <% end %>
</ul>
<ul>
  <%= link_to "Create New Lineup", new_lineup_path, class: "btn btn-default" %></li>
  <%= render @team.lineups %>
</ul>
