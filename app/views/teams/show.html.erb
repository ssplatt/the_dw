<h1><%= @team.name %></h1>
<% if current_user.admin? || current_team?(@team) %>
<div><%= link_to "Edit", edit_team_path(@team), class: "btn btn-primary" %></div>
<% end %>
<div><img src="<%= @team.logo %>" /></div>
<ul>
  <li>User: <%= link_to @team.user.name, @team.user %></li>
  <li>League: <%= link_to @team.league.name, @team.league %></li>
  <% if @team.is_commissioner %>
  <li>Commissioner</li>
  <% end %>
</ul>
<ul>
  <%= render @team.lineups.sort_by{ |l| l.week } %>
</ul>
