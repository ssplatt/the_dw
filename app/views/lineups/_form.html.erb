<%= form_for(@lineup) do |f| %>
  <%= render 'shared/lineup_error_messages' %>
  
  <%= f.label :week %>
  <%= f.select :week, (1..17), :disabled => disabled_weeks, class: 'form-control' %>
  
  <%= f.label :division %>
  <%= f.select :division_id, 
        options_for_select(
            @league.divisions.map{
              |d| [ "#{d["name"]}", d["id"] ]
            },
            selected: f.object.division_id,
          ), {}, class: 'form-control' %>
  
  <%= f.label :qb_id %>
  <% if @locked_players.include? f.object.qb_id.to_s %>
    <%= f.select :qb_id, 
      options_for_select(
        @nfl_qbs.map{ 
          |p| [ "#{p["name"]} (#{p["teamAbbr"]}) (projected #{p["weekProjectedPts"]})", p["id"] ]
        },
        selected: f.object.qb_id,
        disabled: @disabled_players
      ),
      {},
      { 
        prompt: "Select a QB",
        class: 'form-control',
        disabled: true 
      } %>
  <% else %>
